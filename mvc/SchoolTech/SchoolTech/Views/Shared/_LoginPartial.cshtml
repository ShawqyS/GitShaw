@using Microsoft.AspNetCore.Identity
@inject SignInManager<Gebruiker> SignInManager
@inject UserManager<Gebruiker> UserManager

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/SchoolTech.styles.css" asp-append-version="true" />


<ul class="nav nav-pills flex-column mb-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item custom-item">
            <a class="nav-link custom-nav-link" asp-area="Identity" asp-controller="Account" asp-action="Logout">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item custom-item">
            <a class="nav-link custom-nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login">Login</a>
        </li>
        <li class="nav-item custom-item">
            <a class="nav-link custom-nav-link" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
        </li>
    }
</ul>
