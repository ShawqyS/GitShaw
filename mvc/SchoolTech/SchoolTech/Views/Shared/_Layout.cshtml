
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SchoolTech</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SchoolTech.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/5c74d45f06.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>


</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse" id="sidebarCollapse" style="width: 280px;">
               <nav>
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none">
                    <span style="color:#2d8b6a;" class="fs-4">SchoolTech</span>
                </a>
                <hr>
                <ul class="nav nav-pills flex-column mb-auto">
                    @if (User.IsInRole("Admin") || User.IsInRole("Directie") || User.IsInRole("Gebruiker") || User.IsInRole("Medewerker") || User.IsInRole("Coordinator") || User.IsInRole("Leerkracht"))
                    {
                        <li class="nav-item custom-item">
                            <a href="@Url.Action("Index", "Dashboard")" class="nav-link custom-nav-link" aria-current="page">
                                <i class="fa-solid fa-chart-line"></i>
                                Dashboard
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Directie") || User.IsInRole("Gebruiker") || User.IsInRole("Medewerker") || User.IsInRole("Coordinator") || User.IsInRole("Leerkracht"))
                    {
                        <li class="nav-item custom-item">
                            <a href="@Url.Action("Index", "Studiebezoek")" class="nav-link custom-nav-link" aria-current="page">
                                <i class="fa-solid fa-table-columns"></i>
                                Studiebezoeken
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Directie") || User.IsInRole("Gebruiker") || User.IsInRole("Medewerker") || User.IsInRole("Coordinator") || User.IsInRole("Leerkracht"))
                    {
                        <li class="nav-item custom-item">
                            <a href="@Url.Action("CRUD", "Navorming")" class="nav-link custom-nav-link" aria-current="page">
                                <i class="fa-solid fa-calendar"></i>
                                Navormingen
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Medewerker") || User.IsInRole("Coordinator") || User.IsInRole("Leerkracht"))
                    {
                        <li class="nav-item custom-item">
                            <a href="@Url.Action("CRUD", "Afwezigheid")" class="nav-link custom-nav-link" aria-current="page">
                                <i class="fa-solid fa-person-circle-question"></i>
                                Afwezigheden
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Directie") || User.IsInRole("Gebruiker") || User.IsInRole("Medewerker") || User.IsInRole("Coordinator") || User.IsInRole("Leerkracht"))
                    {
                        <li class="nav-item custom-item">
                            <a href="@Url.Action("Weergeven", "Fotoalbum")" class="nav-link custom-nav-link" aria-current="page">
                                <i class="fa-solid fa-image"></i>
                                Fotoalbums
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item custom-item">
                            <a href="@Url.Action("Index", "Gebruiker")" class="nav-link custom-nav-link" aria-current="page">
                                <i class="fa-solid fa-users"></i>
                                Gebruikers
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Coordinator"))
                    {
                        <li class="nav-item custom-item">
                            <a href="@Url.Action("Index", "Klas")" class="nav-link custom-nav-link" aria-current="page">
                                <i class="fa-solid fa-landmark"></i>
                                Klassen
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Coordinator"))
                    {
                        <li class="nav-item custom-item">
                            <a href="@Url.Action("Index", "Vak")" class="nav-link custom-nav-link" aria-current="page">
                                <i class="fa-brands fa-discourse"></i>
                                Vakken
                            </a>
                        </li>
                    }

                    <!-- Meer links hier -->
                </ul>
                <hr>
                <partial name="_LoginPartial" />
               </nav>
            </div>


            <main role="main" style="background-color:#f6e4ea;" class="col-md-9 ml-sm-auto col-lg-10 px-4 main-content">
                <!-- De rest van uw pagina-inhoud -->
                <button class="btn btn-primary d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarCollapse">
                    <i class="fas fa-bars"></i>
                </button>


                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
