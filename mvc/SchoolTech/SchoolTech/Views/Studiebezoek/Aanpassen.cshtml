@{
    ViewBag.Title = "Studiebezoek Formulier";
}
    <div class="container mt-5">
        <h2 class="mb-4">Studiebezoek Aanmaken</h2>

        <form>
            <div class="form-group col-md-6">
                <label for="naamAanvrager">Naam Aanvrager:</label>
                <input type="text" class="form-control" id="naamAanvrager" name="naamAanvrager">
            </div>

            <div class="form-group col-md-6">
                <label for="datumStudiebezoek">Datum Studiebezoek:</label>
                <input type="date" class="form-control" id="datumStudiebezoek" name="datumStudiebezoek">
            </div>

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="startuur">Startuur:</label>
                    <input type="time" class="form-control" id="startuur" name="startuur">
                </div>
                <div class="form-group col-md-6">
                    <label for="einduur">Einduur:</label>
                    <input type="time" class="form-control" id="einduur" name="einduur">
                </div>
            </div>

            <div class="form-group col-md-6">
                <label for="redenStudiebezoek">Reden Studiebezoek:</label>
                <textarea class="form-control" id="redenStudiebezoek" name="redenStudiebezoek"></textarea>
            </div>

            <div class="form-group col-md-6">
                <label for="vak">In het kader van welk vak:</label>
                <input type="text" class="form-control" id="vak" name="vak">
            </div>

            <div class="form-group col-md-6">
                <label for="klassen">Klassen die meegaan:</label>
                <input type="text" class="form-control" id="klassen" name="klassen">
            </div>

            <div class="form-group col-md-6">
                <label for="totaalAantalLeerlingen">Totaal aantal leerlingen:</label>
                <input type="number" class="form-control" id="totaalAantalLeerlingen" name="totaalAantalLeerlingen">
            </div>

            <div class="form-group col-md-6">
                <label for="leerkrachten">Leerkrachten die meegaan:</label>
                <input type="text" class="form-control" id="leerkrachten" name="leerkrachten">
            </div>

            <div class="form-group col-md-6">
                <label for="kostprijsStudiebezoek">Kostprijs Studiebezoek:</label>
                <input type="text" class="form-control" id="kostprijsStudiebezoek" name="kostprijsStudiebezoek">
            </div>

            <div style="margin-top:15px;" class="form-group col-md-6">
                <label for="bijlagen">Eventueel bijlagen (offertes):</label>
                <input type="file" class="form-control-file" id="bijlagen" name="bijlagen" multiple>
            </div>

            <div class="form-group col-md-6">
                <label for="vervoer">Vervoer:</label>
                <select id="vervoer" name="vervoer" class="form-control">
                    <option value="bus">Bus</option>
                    <option value="tram">Tram</option>
                    <option value="trein">Trein</option>
                    <option value="teVoet">Te Voet</option>
                    <option value="fiets">Fiets</option>
                    <option value="auto">Auto</option>
                    <!-- Voeg andere opties toe indien nodig -->
                </select>
            </div>

            <div class="form-group col-md-6">
                <label for="kostprijsVervoer">Kostprijs Vervoer:</label>
                <input type="text" class="form-control" id="kostprijsVervoer" name="kostprijsVervoer">
            </div>

            <button style="margin-top:15px;" type="submit" class="btn btn-primary">Verstuur</button>
        </form>
    </div>
