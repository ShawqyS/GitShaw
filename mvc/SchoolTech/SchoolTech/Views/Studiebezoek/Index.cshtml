@using Microsoft.AspNetCore.Identity

@inject SignInManager<Gebruiker> SignInManager
@inject UserManager<Gebruiker> UserManager

@{
	ViewBag.Title = "Studiebezoek Weergave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center my-title">Studiebezoek Overzicht</h2>
    <div class="text-center my-title">
        <a href="@Url.Action("Toevoegen", "Klas")" class="btn btn-success mb-3">Nieuwe Klas Toevoegen</a>

    </div>
    <a href="@Url.Action("Toevoegen", "Studiebezoek")" class="btn btn-success mb-3">Nieuw Studiebezoek Toevoegen</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Naam Aanvrager</th>
                <th>Datum Studiebezoek</th>
                <th>Vak</th>
                <th>Kostprijs</th>
                <!-- Voeg andere relevante kolommen toe -->
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            <tr data-naam="Jefke" data-datum="12-12-2002" data-vak="Wiskunde" data-kostprijs="100$">
                    <td>Jefke</td>
                    <td>12-12-2002</td>
                    <td>Wiskunde</td>
                    <td>100$</td>
                    <td>
                        <a href="#" class="btn btn-secondary btn-sm view-btn" data-toggle="modal" data-target="#viewModal">Bekijken</a>
                        @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Aanpassen", "Studiebezoek")" class="btn btn-primary btn-sm">Bewerken</a>
                        
                        <a href="" class="btn btn-danger btn-sm">Verwijderen</a>
                    }
                        @if (User.IsInRole("Coordinator,Directie"))
                        {
                            <a href="@Url.Action("Aanpassen", "Studiebezoek")" class="btn btn-primary btn-sm">Bewerken</a>
                        }
                    </td>
                    
                    <!-- Voeg andere data velden toe -->
                    
                </tr>
        </tbody>
    </table>
    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewModalLabel">Studiebezoek Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Naam: <span id="modalNaam"></span><br>
                    Datum: <span id="modalDatum"></span><br>
                    Vak: <span id="modalVak"></span><br>
                    Kostprijs: <span id="modalKostprijs"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Sluiten</button>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

<!-- jQuery (noodzakelijk voor Bootstrap's JavaScript plugins) -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

<!-- Popper.js (noodzakelijk voor Bootstrap's tooltips en popovers) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.view-btn').forEach(button => {
            button.addEventListener('click', function () {
                var row = this.closest('tr');
                document.getElementById('modalNaam').textContent = row.getAttribute('data-naam');
                document.getElementById('modalDatum').textContent = row.getAttribute('data-datum');
                document.getElementById('modalVak').textContent = row.getAttribute('data-vak');
                document.getElementById('modalKostprijs').textContent = row.getAttribute('data-kostprijs');
            });
        });
    });
</script>

