@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add New Album";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <form method="post" action="/" enctype="multipart/form-data">
        <div class="form-group">
            <label for="albumName">Album Name</label>
            <input type="text" class="form-control" id="albumName" name="albumName" placeholder="Enter album name">
        </div>

        <div class="form-group">
            <label for="albumDate">Date</label>
            <input type="date" class="form-control" id="albumDate" name="albumDate">
        </div>
        <div class="col-md-3">
            <div class="thumbnail">
                <img src="https://via.placeholder.com/150" alt="Placeholder Image">
                <div class="caption">
                    <a href="path_to_album_details" class="btn btn-primary">Delete Image</a>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="albumPictures">Upload Pictures</label>
            <input type="file" class="form-control-file" id="albumPictures" name="albumPictures" multiple>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts {
    <!-- Include any additional scripts here -->
}

