@model Gebruiker
@{
    ViewData["Title"] = "Register";
}
<div class="container mt-5">
    <h1>Register</h1>
    @Html.ValidationSummary()
    <form asp-action="Register" asp-controller="Home" method="post">

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h2 class="text-center">@ViewData["Title"]</h2>
                    </div>
                    <div class="card-body" style="margin-block:10px;">
                        <div class="form-group">
                            <label asp-for="@Model.Email"></label>
                        
                         
                                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Email)
                            
                        </div>

                        <div class="form-group" style="margin-block:10px;">
                            <label asp-for="@Model.Wachtwoord"></label>
                           
                            
                                @Html.PasswordFor(m => m.Wachtwoord, new { placeholder = "Password", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Wachtwoord)
                           
                        </div>

                        <div class="form-group" style="margin-block:10px;">
                            <label asp-for="@Model.Initialen"></label>
                            
                           
                                @Html.TextBoxFor(m => m.Initialen, new { placeholder = "Initialen", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Initialen)
                      
                        </div>

                        <button style="margin-block:10px;"type="submit" class="btn btn-primary w-100">Maak account aan</button>
                    </div>
                </div>
            </div>


            
        </div>
    </form>
</div>