@{
    ViewData["Title"] = "SchoolTech";
}

@using SchoolTech.ViewModels
@model Gebruiker;

<div class="container">
    <h1>Login</h1>
    @Html.ValidationSummary()
    <form asp-action="Index" asp-controller="Home" method="post">

        <div class="logindiv">

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Email" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>

            <div class="form-group col-sm-12">
                <label asp-for="@Model.Wachtwoord" class="col-lg-3 control-label"></label>
                <br>
                <div class="col-lg-9">
                    @Html.PasswordFor(m => m.Wachtwoord, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Wachtwoord)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12 btn-submit">
                    <button type="submit" class="btn btn-success">Login</button>
                    <a asp-action="Register" asp-controller="Home">Geen account?</a>

                </div>
            </div>
        </div>
    </form>
</div>



