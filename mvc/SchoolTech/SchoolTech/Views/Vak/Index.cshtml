@using Microsoft.AspNetCore.Identity
@using SchoolTech.ViewModels;

@model VakCRUDViewModel;
@inject SignInManager<Gebruiker> SignInManager
@inject UserManager<Gebruiker> UserManager
@{
	ViewBag.Title = "Vakken Weergave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center my-title">Vakken Overzicht</h2>
    <div class="text-center my-title">
        <a href="@Url.Action("Toevoegen", "Vak")" class="btn btn-success mb-3">Nieuw Vak Toevoegen</a>
    </div>
    

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Naam</th>
                <!-- Voeg andere relevante kolommen toe -->
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var vak in Model.Vakken)
            {
                <tr data-naam="@(vak.Naam)">
                    <td>@vak.Naam</td>
                    <td>
                        <a href="#" class="btn btn-secondary btn-sm view-btn" data-toggle="modal" data-target="#viewModal">Bekijken</a>
                        @if (User.IsInRole("Admin") || User.IsInRole("Coordinator"))
                        {
                            <a asp-action="Aanpassen" asp-route-id="@vak.VakId" class="btn btn-primary btn-sm">Bewerken</a>
                            <form style="display: inline;" class="justify-content-end" method="post" asp-action="Delete" asp-route-id="@vak.VakId" onsubmit="return confirm('Bent u zeker dat u deze navorming wilt verwijderen?');">
                                <input type="submit" value="Verwijder" class="btn btn-danger btn-sm" />
                            </form>
                        }
                        
                    </td>
                </tr>
            }
            <!--
            <tr data-naam="Wiskunde">
                
                    <td>Wiskunde</td>
                     Voeg andere data velden toe 
                    <td>
                        <a href="#" class="btn btn-secondary btn-sm view-btn" data-toggle="modal" data-target="#viewModal">Bekijken</a>
                        if (User.IsInRole("Admin"))
                        {
                        <a href="Url.Action("Aanpassen", "Vak")" class="btn btn-primary btn-sm">Bewerken</a>
                        
                        <a href="" class="btn btn-danger btn-sm">Verwijderen</a>
                        }
                    <a href="Url.Action("Aanpassen", "Vak")" class="btn btn-primary btn-sm">Bewerken</a>
                    <a href="" class="btn btn-danger btn-sm">Verwijderen</a>
                    </td>
                
            </tr>
            -->
        </tbody>
    </table>
    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewModalLabel">Vak Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Naam: <span id="modalNaam"></span><br>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Sluiten</button>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

<!-- jQuery (noodzakelijk voor Bootstrap's JavaScript plugins) -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

<!-- Popper.js (noodzakelijk voor Bootstrap's tooltips en popovers) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.view-btn').forEach(button => {
            button.addEventListener('click', function () {
                var row = this.closest('tr');
                document.getElementById('modalNaam').textContent = row.getAttribute('data-naam');
            });
        });
    });
</script>

