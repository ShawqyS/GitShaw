@model SchoolTech.ViewModels.VakCreateViewModel
@{
    ViewBag.Title = "Vak Aanmaken";
}
<div class="container mt-5">
    <h2 class="mb-4">Vak Aanmaken</h2>

    <form asp-action="Toevoegen">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group col-md-6">
            <label>Naam:</label>
            <input asp-for="Naam" type="text" class="form-control" id="naam" name="naam">
            <span asp-validation-for="Naam" class="text-danger"></span>
        </div>

        <button style="margin-top:15px;" type="submit" class="btn btn-primary">Verstuur</button>
        <a asp-action="CRUD" style="margin-top:15px;" class="btn btn-primary">Terug naar vakkenlijst</a>
    </form>
</div>
