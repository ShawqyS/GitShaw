@{
	ViewBag.Title = "Afwezigheid Weergave";
}

<div class="container mt-5">
    <h2 class="mb-4">Afwezigheid Overzicht</h2>

    <a href="@Url.Action("Toevoegen", "Afwezigheid")" class="btn btn-success mb-3">Nieuwe Afwezigheid Toevoegen</a>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Naam</th>
                <th>Start Datum</th>
                <th>Eind Datum</th>
                <!-- Voeg andere relevante kolommen toe -->
                <th>Acties</th>
            </tr>
        </thead>
        <tbody>
            <tr data-naam="Jefke" data-datumstart="12-12-2002" data-datumeind="14-12-2002">
                    <td>Maria</td>
                    <td>12-12-2022</td>
                    <td>14-12-2022</td>
                    <td>100$</td>
                    <!-- Voeg andere data velden toe -->
                    <td>
                    <a href="@Url.Action("Aanpassen", "Afwezigheid")" class="btn btn-primary btn-sm">Bewerken</a>
                        <a href="#" class="btn btn-secondary btn-sm view-btn" data-toggle="modal" data-target="#viewModal">Bekijken</a>
                        <a href="" class="btn btn-danger btn-sm">Verwijderen</a>
                    </td>
                </tr>
        </tbody>
    </table>
    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewModalLabel">Studiebezoek Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Naam: <span id="modalNaam"></span><br>
                    Datum: <span id="modalDatumstart"></span><br>
                    Vak: <span id="modalDatumeind"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Sluiten</button>
                </div>
            </div>
        </div>
    </div>
</div>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">

<!-- jQuery (noodzakelijk voor Bootstrap's JavaScript plugins) -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>

<!-- Popper.js (noodzakelijk voor Bootstrap's tooltips en popovers) -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        document.querySelectorAll('.view-btn').forEach(button => {
            button.addEventListener('click', function () {
                var row = this.closest('tr');
                document.getElementById('modalNaam').textContent = row.getAttribute('data-naam');
                document.getElementById('modalDatumstart').textContent = row.getAttribute('data-datumstart');
                document.getElementById('modalDatumeind').textContent = row.getAttribute('data-datumeind');
            });
        });
    });
</script>

